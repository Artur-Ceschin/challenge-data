<div class="item">
    <div>Url da imagem</div>
    <div>
        <input type="ul" name="avatar_url" value="{{ student.avatar_url }}" placeholder="https://">
    </div>
</div>

<div class="item">
    <div>Aluno</div>
    <div>
        <input type="text" name="name" value="{{ student.name }}">
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" value="{{ student.email }}">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{ student.birth }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="school_year" id="">
            <option value="5EF" {% if student.school_year == '5EF'%} selected="selected" {% endif %}>5º ano do fundamental</option>
            <option value="6EF" {% if student.school_year == '6EF'%} selected="selected" {% endif %}>6º ano do fundamental</option>
            <option value="7EF" {% if student.school_year == '7EF'%} selected="selected" {% endif %}>7º ano do fundamental</option>
            <option value="8EF" {% if student.school_year == '8EF'%} selected="selected" {% endif %}>8º ano do fundamental</option>
            <option value="9EF" {% if student.school_year == '9EF'%} selected="selected" {% endif %}>9º ano do fundamental</option>
            <option value="1EM" {% if student.school_year == '1EM'%} selected="selected" {% endif %}>1º ano do ensino médio</option>
            <option value="2EM" {% if student.school_year == '2EM'%} selected="selected" {% endif %}>2º ano do ensino médio</option>
            <option value="3EM" {% if student.school_year == '3EM'%} selected="selected" {% endif %}>3º ano do ensino médio</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Horas por semana</div>
    <div>
        <input type="number" name="hours" placeholder="" value="{{ student.hours }}">
    </div>
</div>

<button type="submit">Salvar</button>