<div class="item">
    <div>Url da imagem</div>
    <div>
        <input type="ul" name="avatar_url" value="{{ teacher.avatar_url }}" placeholder="https://">
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input type="text" name="name" value="{{ teacher.name }}" placeholder="Digite seu nome">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth_date" value="{{ teacher.birth_date }}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level" id="">
            <option value="EM" {% if teacher.education_level == "EM"%} selected {% endif%}>Ensino Médio Completo</option>
            <option value="ES" {% if teacher.education_level == "ES"%} selected {% endif%}>Ensino Superior Completo</option>
            <option value="M" {% if teacher.education_level == "M"%} selected {% endif%}>Mestrado</option>
            <option value="D" {% if teacher.education_level == "D"%} selected {% endif%}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>
        <span>
            <input type="radio" name="class_type" value="online" {% if teacher.class_type == "online" %} checked {% endif %}>
            Online
        </span>

        <span>
            <input type="radio" name="class_type" value="face_to_face" {% if teacher.class_type == "face_to_face" %} checked {% endif %}>
            Presencial
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input type="text" name="subjects_taught" placeholder="Suas diciplinas" value="{{ teacher.subjects_taught }}">
    </div>
</div>

<button type="submit">Salvar</button>

