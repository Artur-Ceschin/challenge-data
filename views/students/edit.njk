{% extends 'layout.njk' %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>

        <section class="details">

            <form method="POST" action="/teachers?_method=PUT">

                <h3>Novo Professor</h3>

                {% include 'teachers/fields.njk'%}

                <input type="hidden" name="id" value="{{ teacher.id }}"/>

            </form>

            <form class="form-delete" action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{ teacher.id }}"/>
                <div class="btn">
                    <button  type="submit">Salvar</button>
                    <button class="btn-red" type="submit">Deletar</button>
                </div>

            </form>

        </section>
    </div>

{% endblock content %}